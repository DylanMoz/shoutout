doctype html
html(class=htmlClass, data-ng-app="ShoutOut.Employee")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    base(href='/employee/')
    title {{ title }}
    link(href='https://fonts.googleapis.com/css?family=Lato:100italic,900italic,400italic,300italic,700italic', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/css/app.css')
    link(rel='stylesheet', href='/css/employee.css')

    block styles

  body
    header(data-ng-controller="HeaderCtrl")
      nav
        .nav-wrapper
          a.brand-logo(href="/index") 
            | Shout
            span Out 
            i.fa.fa-bullhorn
          a.button-collapse(href='#', data-activates='slide-out', data-sidenav="left" data-closeonclick="true")
            i.mdi-navigation-menu
          ul.right.hide-on-med-and-down
            li
              a.dropdown-button(href='#!', data-activates='dropdown1')
                | {{ user.employee.name.first }}
                i.mdi-navigation-arrow-drop-down.right
              ul#dropdown1.dropdown-content
                li
                  a(href='dashboard') Dashboard
                li
                  a(href='survey') Survey
                li
                  a(href='/logout') Logout
        .progress(data-ng-if="loading")
          .indeterminate
      ul#slide-out.side-nav
        li.logo: a(href="/"): i.fa.fa-bullhorn.fa-5x
        hr
        li.bold
          a(href='dashboard') Dashboard
        li.bold
          a(href='survey') Survey
        li.bold
          a(href='/logout') Logout

    include partials/flash

    .container
      .row
        div(data-ng-view)

    include partials/footer

    script(src='https://code.jquery.com/jquery-2.2.0.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.js')
    script(src='/js/lib/angular-materialize.min.js')
    
    script(src='/js/shared/module.js')
    script(src='/js/employee/module.js')

