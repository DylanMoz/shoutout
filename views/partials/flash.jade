

if messages.errors
  for error in messages.errors
    script.
      document.addEventListener("DOMContentLoaded", function(event) { 
        Materialize.toast('#{error.msg}', 8000, 'rounded')
      });
if messages.info
  for info in messages.info
    script.
      document.addEventListener("DOMContentLoaded", function(event) { 
        Materialize.toast('#{info.msg}', 8000, 'rounded')
      });
if messages.success
    for success in messages.success
      script.
        document.addEventListener("DOMContentLoaded", function(event) { 
          Materialize.toast('#{success.msg}', 8000, 'rounded')
        });
