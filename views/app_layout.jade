doctype html
html(class=htmlClass)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title}
    link(href='https://fonts.googleapis.com/css?family=Lato:100italic,900italic,400italic,300italic,700italic', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/css/app.css')

    block styles

  body
    header
      include partials/app_header

    include partials/flash

    .container
      .row
        block content

    include partials/footer

    script(src='/js/lib/jquery.min.js')
    script(src='/js/lib/materialize/bin/materialize.min.js')
    script(src='/js/app.js')

    block scripts

